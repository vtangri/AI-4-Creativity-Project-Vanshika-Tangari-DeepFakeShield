# DeepFakeShield Backend

DATABASE_URL=postgresql://deepfakeshield:deepfakeshield@localhost:5432/deepfakeshield
REDIS_URL=redis://localhost:6379/0
SECRET_KEY=change-this-in-production-to-a-secure-secret-key

# Storage
STORAGE_PATH=./storage
UPLOAD_MAX_SIZE_MB=500

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ML Models
ML_MODELS_PATH=../ml/models
VIDEO_MODEL_VERSION=v1.0.0
AUDIO_MODEL_VERSION=v1.0.0
FUSION_MODEL_VERSION=v1.0.0

# LLM Report Generation
OPENAI_API_KEY=your-openai-api-key
LLM_MODEL=gpt-4

# Feature Flags
ENABLE_GPU=false
ENABLE_BATCH_PROCESSING=true
ENABLE_ACTIVE_LEARNING=false
